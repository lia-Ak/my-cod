*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    animation: rotate 2s linear infinite;
}


.item {
    width: 200px;
    height: 200px;
    position: absolute;
    left: 50px;
    top: 50px;
}
.item-1 {
    background-color: rgb(58, 132, 12);
    z-index: 3;
    margin: 20px;
    padding: 30px;
    

}

.item:hover.item-1 {


    transform: rotate(45deg);
    width: 300px;
    height: 300px;
    position: absolute;
    transform: scale(45deg);
    transition: all 2s ease-in-out;
    background-color: rgb(211, 225, 9);
}



.item-2 {
    background-color: blue;
    z-index: 2;
    
}


    
.item-3 {
    background-color: rgb(235, 11, 11);
    position: absolute;
    z-index: 1;
    margin: 40px;


}
